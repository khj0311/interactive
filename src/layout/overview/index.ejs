<div class="overview">
  <div class="overview-header">
    <h2 class="overview-header__title"><%= data.name %></h2>
    <% if (typeof data.libs !=='undefined' && data.libs.length > 0) { %>
    <ul class="overview-header__libs">
      <% for( let index = 0; index < data.libs.length; index++ ) { %>
      <li class="overview-header__libs-item">
        <a class="overview-header__libs-link" href="<%= data.libs[index].href %>" target="_blank"><%= data.libs[index].name.toUpperCase() %></a>
